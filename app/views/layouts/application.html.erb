<!DOCTYPE html>
<html>
<head>
  <title>VotesApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <div class='container'>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="#">Votaci√≥n</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
        </ul>
      </div>

      <div id='currentUser' class="navbar-collapse collapse w-100 order-2 dual-collapse2">
        <ul class="navbar-nav" >
          <li class="nav-item">
            <% if user_signed_in? %>
            <%= current_user.name %>
            <% else %>
            Debe ingresar para votar
            <% end %>
          </li>
        </ul>
      </div>

      <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <% if user_signed_in? %>
            <%= link_to "Salir", destroy_user_session_path, :method => :delete, class:"btn btn-danger"%>
            <%= link_to "Modificar", edit_user_registration_path, :method => :get, class:"btn btn-primary"%>
            <% else %>
            <%= link_to "Ingresar", new_user_session_path, :method => :get, class:"btn btn-primary"%>

            <% end %>
          </li>
        </ul>
      </div>
    </nav>
  </div>
  <div class="container">
  <%= yield %>
    </div>

</body>
</html>
